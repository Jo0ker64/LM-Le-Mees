{% extends 'base.html.twig' %}
{% block title %}Le Mées{% endblock %}

{% block body %}


    {# ----------------------------------------------------MAIN---------------------------------------------------- #}


    <main>
        <div class="category">
            <div class="overlay">
                <h2>Les formules</h2>
                <ul>
                    {% for formule in formules %}
                        <li>{{ formule.title }} : {{ formule.ingredient}} <b>{{ formule.price }}€</b></li>
                    {% endfor %}
                </ul>
                <small>* Snacking : Sandwich, Paninis, Tacos, Wrap, Burger</small>
                <small>* Salade : Salade composée, poké-ball, salade du jour</small>
            </div>
        </div>

        <div class="category">
            <div class="overlay">
                <h2>Salade Bar</h2>
                <ul>
                    {% for salade in saladeBars %}
                        <li>{{ salade.title }} : {{ salade.ingredient}} <b>{{ salade.price }}€</b></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="category">
            <div class="overlay">
                <h2>Snacking</h2>
                <ul>
                    {% for snack in snackings %}
                        <li>{{ snack.title }} : {{ snack.ingredient}} <b>{{ snack.price }}€</b></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="category">
            <div class="overlay">
                <h2>Pizzas base tomate</h2>
                <ul>
                    {% for pizzaTomate in pizzaTomates %}
                        <li>{{ pizzaTomate.title }} : {{ pizzaTomate.ingredient}} <b>{{ pizzaTomate.price }}€</b></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="category">
            <div class="overlay">
                <h2>Pizzas base crème</h2>
                <ul>
                    {% for pizzaCreme in pizzaCremes %}
                        <li>{{ pizzaCreme.title }} : {{ pizzaCreme.ingredient}} <b>{{ pizzaCreme.price }}€</b></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="category">
            <div class="overlay">
                <h2>Pizzas chef</h2>
                <ul>
                    {% for pizzaChef in pizzaChefs %}
                        <li>{{ pizzaChef.title }} : {{ pizzaChef.ingredient}} <b>{{ pizzaChef.price }}€</b></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="category">
            <div class="overlay">
                <h2>Gourmandises</h2>
                <ul>
                    {% for gourmandise in gourmandises %}
                        <li>{{ gourmandise.title }} <b>{{ gourmandise.price }}€</b></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </main>

{% endblock %}